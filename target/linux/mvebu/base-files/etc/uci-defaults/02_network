#!/bin/sh
#
# Copyright (C) 2014 OpenWrt.org
#

[ -e /etc/config/network ] && exit 0

touch /etc/config/network

. /lib/functions/uci-defaults.sh
. /lib/mvebu.sh

ucidef_set_interface_loopback

board=$(mvebu_board_name)

case "$board" in
*)
	ucidef_set_interface_lan "eth0"
	;;
esac

uci commit network

exit 0
